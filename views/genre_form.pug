extends layout 

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' name='name' required value=(genre ? genre.name : ''))
      input#prev_name.form-control(type='hidden' name='prev_name' value=prev_name)
      if errors && errors.has('name')
        p.form-error * #{errors.get('name')}

    button(type='submit') Submit