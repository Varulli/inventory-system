extends layout 

block content 
  h1= title 

  if platform_games.length
    h2 Games
    dl
      each game in platform_games
        dt
          a(href=game.url) #{game.name}
        dd #{game.description}
  else
    p This platform has no games.

block actions
  button.update
    a(href=platform.url+'/update') Update Platform
  button.delete
    a(href=platform.url+'/delete') Delete Platform